    </footer>

    <script>
        // -- The Logic Core --

        const canvas = document.getElementById('radarChart');
        const ctx = canvas.getContext('2d');
        
        // Configuration for High DPI screens
        const dpr = window.devicePixelRatio || 1;
        const rect = canvas.getBoundingClientRect();
        canvas.width = rect.width * dpr;
        canvas.height = rect.height * dpr;
        ctx.scale(dpr, dpr);

        const labels = ["Te Hiranga", "Hauora", "Logistics", "Mﾄ》auranga", "Whﾄ］au"];
        
        function updateSystem() {
            // 1. Gather Data
            const scores = [
                parseInt(document.getElementById('input-1').value),
                parseInt(document.getElementById('input-2').value),
                parseInt(document.getElementById('input-3').value),
                parseInt(document.getElementById('input-4').value),
                parseInt(document.getElementById('input-5').value)
            ];

            // Update text displays
            scores.forEach((s, i) => document.getElementById(`val-${i+1}`).innerText = s);

            // 2. Calculate Strategic Viability
            const total = scores.reduce((a, b) => a + b, 0);
            const average = total / 5;
            const minScore = Math.min(...scores);
            
            // Logic: Risk Aversion Check
            // If any single pillar is too weak (< 3), the system flags a risk regardless of total score.
            let title = "";
            let desc = "";
            let color = "";

            if (minScore < 3) {
                title = "CRITICAL IMBALANCE";
                desc = "One or more systemic pillars are critically weak. Implementation risks are too high.";
                color = "#e74c3c"; // Red
            } else if (average >= 8) {
                title = "HIGHLY VIABLE";
                desc = "Excellent systemic alignment. This initiative demonstrates strong holistic value.";
                color = "#27ae60"; // Green
            } else if (average >= 5) {
                title = "MODERATE VIABILITY";
                desc = "Project is feasible but may require resource trade-offs or refinement.";
                color = "#f39c12"; // Orange
            } else {
                title = "LOW PRIORITY";
                desc = "Current impact does not justify the resource expenditure.";
                color = "#7f8c8d"; // Grey
            }

            // Update UI
            const vBox = document.getElementById('verdict-box');
            document.getElementById('verdict-title').innerText = title;
            document.getElementById('verdict-title').style.color = color;
            document.getElementById('verdict-desc').innerText = desc;
            vBox.style.borderLeft = `5px solid ${color}`;

            // 3. Draw Radar Chart (The "Fun" Visual Part)
            drawRadar(scores);
        }

        function drawRadar(data) {
            const w = canvas.width / dpr;
            const h = canvas.height / dpr;
            const cx = w / 2;
            const cy = h / 2;
            const radius = Math.min(w, h) / 2 - 40;
            const totalAxes = 5;

            ctx.clearRect(0, 0, w, h);

            // Draw Grid (Web)
            ctx.strokeStyle = "#e0e0e0";
            ctx.lineWidth = 1;
            
            for (let r = 0; r <= 10; r += 2) { // 5 rings
                ctx.beginPath();
                for (let i = 0; i < totalAxes; i++) {
                    const angle = (Math.PI * 2 * i) / totalAxes - Math.PI / 2;
                    const rDist = (radius / 10) * r;
                    const x = cx + Math.cos(angle) * rDist;
                    const y = cy + Math.sin(angle) * rDist;
                    if (i === 0) ctx.moveTo(x, y);
                    else ctx.lineTo(x, y);
                }
                ctx.closePath();
                ctx.stroke();
            }

            // Draw Axes
            for (let i = 0; i < totalAxes; i++) {
                const angle = (Math.PI * 2 * i) / totalAxes - Math.PI / 2;
                const x = cx + Math.cos(angle) * radius;
                const y = cy + Math.sin(angle) * radius;
                
                ctx.beginPath();
                ctx.moveTo(cx, cy);
                ctx.lineTo(x, y);
                ctx.strokeStyle = "#bdc3c7";
                ctx.stroke();

                // Draw Labels
                const lblX = cx + Math.cos(angle) * (radius + 20);
                const lblY = cy + Math.sin(angle) * (radius + 20);
                ctx.fillStyle = "#2c3e50";
                ctx.font = "12px sans-serif";
                ctx.textAlign = "center";
                ctx.fillText(labels[i], lblX, lblY);
            }

            // Draw Data Shape
            ctx.beginPath();
            for (let i = 0; i < totalAxes; i++) {
                const angle = (Math.PI * 2 * i) / totalAxes - Math.PI / 2;
                const val = data[i];
                const rDist = (radius / 10) * val;
                const x = cx + Math.cos(angle) * rDist;
                const y = cy + Math.sin(angle) * rDist;
                if (i === 0) ctx.moveTo(x, y);
                else ctx.lineTo(x, y);
            }
            ctx.closePath();
            ctx.fillStyle = "rgba(52, 152, 219, 0.4)"; // Blue with opacity
            ctx.fill();
            ctx.strokeStyle = "#2980b9";
            ctx.lineWidth = 2;
            ctx.stroke();
        }

        function resetSystem() {
            [1,2,3,4,5].forEach(i => {
                document.getElementById(`input-${i}`).value = 5;
            });
            document.getElementById('projectName').value = "";
            updateSystem();
        }

        // Init
        updateSystem();

    </script>
</body>
